{
    "app-id": "com.mongodb.Compass",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node14"
    ],
    "command": "run.sh",
    "separate-locales": false,
    "tags": [],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--talk-name=org.freedesktop.secrets",
        "--share=network",
        "--device=all"
    ],
    "modules": [
        "shared-modules/libsecret/libsecret.json",
        {
            "name": "run",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 -t /app/bin/ run.sh"
            ],
            "build-options": {
                "env": {
                    "ZYPAK_SANDBOX_FILENAME": "chrome-sandbox",
                    "ZYPAK_DEBUG": "1"
                }
            },
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [
                        "zypak-wrapper '/app/main/MongoDB Compass'"
                    ]
                }
            ]
        },
        {
            "name": "compass",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r main /app/main",
                "install -Dm 644 mongodb-compass.png /app/share/icons/hicolor/256x256/apps/com.mongodb.Compass.png",
                "install -Dm 644 mongodb-compass.desktop /app/share/applications/com.mongodb.Compass"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/mongodb-js/compass/releases/download/v1.32.2/mongodb-compass-1.32.2-linux-x64.tar.gz",
                    "sha256": "d69d97c9a0ea26c5602147b6467fd6aeb4d7e20e8feefd4a03d2639d58b89dfe",
                    "dest": "main"
                },
                {
                    "type": "file",
                    "url": "https://github.com/mongodb-js/compass/raw/main/packages/compass/app-icons/linux/mongodb-compass.png",
                    "sha256": "d2e2a75cbbac65600ef084edec69d0ed1910e7fa32abeff3bd66b2853e1d1ba0"
                }
            ]
        }
    ]
}